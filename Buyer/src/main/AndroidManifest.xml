<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.volkdem.cashdesc" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SMSConfirmationActivity"
            android:label="@string/title_activity_smsconfirmation"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ScanShopCodeActivity" >
        </activity>
        <activity android:name=".ScanProdcutActivity" >
        </activity>
        <activity android:name=".PayProdcutBinActivity" >
        </activity>
        <activity android:name=".PaymentConfirmationActivity" >
        </activity>
        <activity android:name=".PaymentSuccessActivity" >
        </activity>
        <activity android:name=".PaymentRejectActivity" >
        </activity>
        <activity android:name=".AddBankCardActivity" >
        </activity>
        <activity android:name=".SettingsActivity" >
        </activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/main_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_menu_action_item_height"
        android:paddingLeft="@dimen/main_menu_action_item_left_padding"
        android:gravity="center_vertical"
        android:textSize="@dimen/main_menue_item_text_size"/>
    
    <ImageView
        android:layout_width="@dimen/action_item_right_arrow_size"
        android:layout_height="@dimen/action_item_right_arrow_size"
        android:src="@drawable/main_menu_action_item_right_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
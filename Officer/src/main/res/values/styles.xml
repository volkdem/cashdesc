<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrderItemText">
        <item name="android:textSize">@dimen/order_item_text_size</item>
        <item name="android:layout_margin">@dimen/order_item_text_margin</item>
    </style>

    <style name="ProductItemText">
        <item name="android:textSize">@dimen/product_item_text_size</item>
        <item name="android:layout_margin">@dimen/product_item_margin</item>
    </style>

    <style name="SearchOrderFooterText">
        <item name="android:textSize">@dimen/search_order_footer_text_size</item>
        <item name="android:textColor">@color/search_order_footer_text</item>
        <item name="android:layout_marginLeft">@dimen/search_order_footer_text_margin</item>
        <item name="android:layout_marginRight">@dimen/search_order_footer_text_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>




</resources>
